  "main": "index.js",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "start": "astro dev",
    "test": "vitest",
    "test:unit": "vitest",
    "test:integration": "node ./scripts/integration/test-zoho-integration.js",
    "test:axe-playwright": "node ./scripts/run-axe-playwright.js http://localhost:4321",
    "test:lh": "lighthouse http://localhost:4321 --only-categories=accessibility --output=json --output-path=./reports/lh-report.json --quiet",
    "test:lhci": "LHCI_BUILD_CONTEXT__CURRENT_HASH=manual npx lhci autorun",
    "test:a11y": "npx @axe-core/cli http://localhost:4321 --save ./reports/a11y-axe-report.json",
    "images:convert": "node ./scripts/convert-images.js",
    "images:webp": "node ./scripts/convert-images.js --format=webp",
    "images:avif": "node ./scripts/convert-images.js --format=avif",
    "postbuild": "npm run images:convert",
    "check:budgets": "node ./scripts/check-budgets.js",
    "ci-build": "npm run build && npm run check:budgets"
  },
  "keywords": [],
